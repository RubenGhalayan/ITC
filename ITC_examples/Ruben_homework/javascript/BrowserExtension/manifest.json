{
    "name": "Browser Extension Popup Example",
    "manifest_version": 2,
    "version": "1.0",
    "description": "Run process on page activated by click in extension popup",

    "browser_action": {
        "default_popup": "popup.html"
    },

    "background": {
        "scripts": ["background.js"]
    },

    "permissions": [
        "tabs", "http://*/*", "https://*/*"
    ]
}
